---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className = '' } = Astro.props;
---

<img
  src="/lab-token.svg"
  alt="LAB Token"
  width={size}
  height={size}
  class:list={['lab-token-icon', className]}
/>

<style>
  .lab-token-icon {
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
  }
</style>
