<script>
  // Copy RPC URL to clipboard
  const copyButtons = document.querySelectorAll('.copy-btn');

  copyButtons.forEach(btn => {
    btn.addEventListener('click', async () => {
      const endpoint = btn.getAttribute('data-endpoint');
      if (!endpoint) return;

      try {
        await navigator.clipboard.writeText(endpoint);

        // Visual feedback
        const originalHTML = btn.innerHTML;
        btn.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        `;
        btn.style.color = '#22C55E';
        btn.style.borderColor = '#22C55E';

        setTimeout(() => {
          btn.innerHTML = originalHTML;
          btn.style.color = '';
          btn.style.borderColor = '';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });

  // Add Network functionality
  const addNetworkBtn = document.getElementById('addNetworkBtnRpc');
  const btnText = addNetworkBtn?.querySelector('.btn-text') as HTMLElement;

  const LAB_CHAIN_ID = '0x1466'; // 5222 in hex

  const LAB_CHAIN_CONFIG = {
    chainId: LAB_CHAIN_ID,
    chainName: 'LAB Chain',
    nativeCurrency: {
      name: 'LAB',
      symbol: 'LAB',
      decimals: 18
    },
    rpcUrls: ['https://rpc.labchain.la'],
    blockExplorerUrls: ['https://explorer.labchain.la']
  };

  function showSuccess() {
    if (addNetworkBtn && btnText) {
      const originalText = btnText.textContent;
      btnText.textContent = 'Network Added!';
      addNetworkBtn.classList.add('added');

      setTimeout(() => {
        btnText.textContent = originalText;
        addNetworkBtn.classList.remove('added');
      }, 3000);
    }
  }

  function showError(message: string) {
    if (btnText) {
      const originalText = btnText.textContent;
      btnText.textContent = message;

      setTimeout(() => {
        btnText.textContent = originalText;
      }, 3000);
    }
  }

  async function addLabChainNetwork() {
    if (typeof (window as any).ethereum === 'undefined') {
      alert('Please install MetaMask or another Web3 wallet to add the network.');
      return;
    }

    try {
      await (window as any).ethereum.request({
        method: 'wallet_addEthereumChain',
        params: [LAB_CHAIN_CONFIG]
      });
      showSuccess();
    } catch (error: any) {
      if (error.code === 4001) {
        console.log('User rejected adding LAB Chain network');
      } else {
        console.error('Failed to add LAB Chain network:', error);
        showError('Failed to add');
      }
    }
  }

  addNetworkBtn?.addEventListener('click', addLabChainNetwork);
</script>
