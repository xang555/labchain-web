---
import Layout from '../layouts/Layout.astro';
import Pagination from '../components/Pagination.astro';
import { getRpcEndpointsPaginated, searchRpcEndpointsPaginated } from '../lib/data';

// Get search query and page from URL
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('search') || '';
const currentPage = Math.max(1, parseInt(url.searchParams.get('page') || '1'));
const limit = 10;

// Get RPC nodes from database with pagination
const result = searchQuery
  ? searchRpcEndpointsPaginated(searchQuery, currentPage, limit)
  : getRpcEndpointsPaginated(currentPage, limit);

const { data: rpcNodesRaw, total, totalPages } = result;

// Transform to display format
const rpcNodes = rpcNodesRaw.map(node => ({
  id: node.id.toString(),
  name: node.name,
  endpoint: node.endpoint,
  type: node.type,
  status: node.status,
  features: node.features ? node.features.split(',').map(f => f.trim()) : []
}));

const officialNodes = rpcNodes.filter(n => n.type === 'official').length;
const communityNodes = rpcNodes.filter(n => n.type === 'community').length;
---

<Layout title="RPC Endpoints - LAB Chain" description="List of public RPC endpoints for LAB Chain network. Connect your dApps and wallets to the network.">
  <section class="page-hero">
    <div class="container">
      <div class="page-header">
        <div class="breadcrumb">
          <a href="/">Home</a>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
          <span>RPC Endpoints</span>
        </div>
        <h1>Public RPC Endpoints</h1>
        <p>
          Connect your dApps, wallets, and tools to LAB Chain using these public RPC endpoints.
        </p>
      </div>
    </div>
  </section>

  <section class="primary-rpc">
    <div class="container">
      <div class="primary-card">
        <div class="primary-header">
          <div class="primary-info">
            <span class="badge badge-primary">Recommended</span>
            <h2>Primary RPC Endpoint</h2>
            <p>Use this endpoint for general purpose connections to LAB Chain.</p>
          </div>
          <button class="btn btn-primary add-network-btn" id="addNetworkBtnRpc">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
            <span class="btn-text">Add to Wallet</span>
          </button>
        </div>
        <div class="primary-endpoint">
          <code>https://rpc.labchain.la</code>
          <button class="copy-btn" data-endpoint="https://rpc.labchain.la" title="Copy RPC URL">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        </div>
        <div class="primary-details">
          <div class="detail-item">
            <span class="detail-label">Chain ID</span>
            <span class="detail-value">5222</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Currency</span>
            <span class="detail-value">LAB</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Explorer</span>
            <a href="https://explorer.labchain.la" class="detail-link" target="_blank" rel="noopener noreferrer">explorer.labchain.la</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="nodes-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title">
          <h2>All RPC Endpoints</h2>
          <p>Official: {officialNodes} | Community: {communityNodes}</p>
        </div>
        <form class="search-form" method="GET">
          <div class="search-input-wrapper">
            <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" class="search-input" placeholder="Search endpoints..." value={searchQuery} />
            {searchQuery && (
              <a href="/rpc" class="search-clear" title="Clear search">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </a>
            )}
          </div>
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
      </div>

      {rpcNodes.length === 0 ? (
        <div class="empty-state">
          <h3>No RPC Endpoints Found</h3>
          <p>{searchQuery ? 'Try a different search term.' : 'No RPC endpoints have been added yet.'}</p>
          {searchQuery && (
            <a href="/rpc" class="btn btn-secondary">Clear Search</a>
          )}
        </div>
      ) : (
        <div class="table-card">
          <table class="data-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Endpoint</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {rpcNodes.map((node) => (
                <tr>
                  <td>
                    <span class="node-name">{node.name}</span>
                    {node.features.length > 0 && (
                      <div class="node-features">
                        {node.features.map((f) => <span class="feature-tag">{f}</span>)}
                      </div>
                    )}
                  </td>
                  <td>
                    <code class="endpoint-code">{node.endpoint}</code>
                  </td>
                  <td>
                    <span class={`type-badge ${node.type}`}>{node.type}</span>
                  </td>
                  <td>
                    <span class={`status-badge ${node.status}`}>
                      <span class="status-dot"></span>
                      {node.status}
                    </span>
                  </td>
                  <td>
                    <button class="copy-btn" data-endpoint={node.endpoint} title="Copy RPC URL">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                      </svg>
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
          <Pagination
            currentPage={currentPage}
            totalPages={totalPages}
            total={total}
            baseUrl="/rpc"
            searchQuery={searchQuery}
          />
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    padding: 48px 0 32px;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .page-header {
    max-width: 700px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-tertiary);
    margin-bottom: 16px;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .breadcrumb a:hover {
    color: var(--color-primary);
  }

  .page-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 16px;
  }

  .page-header p {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  /* Primary RPC Section */
  .primary-rpc {
    padding: 32px 0;
  }

  .primary-card {
    background: var(--bg-card);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-xl);
    padding: 32px;
  }

  .primary-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24px;
    gap: 24px;
  }

  .primary-info h2 {
    font-size: 1.5rem;
    margin: 12px 0 8px;
  }

  .primary-info p {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .primary-endpoint {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 20px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    margin-bottom: 24px;
  }

  .primary-endpoint code {
    flex: 1;
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .primary-details {
    display: flex;
    gap: 48px;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .detail-label {
    font-size: 12px;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .detail-value {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .detail-link {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-primary);
  }

  .detail-link:hover {
    text-decoration: underline;
  }

  .add-network-btn.added {
    background: rgba(34, 197, 94, 0.1);
    border-color: #22C55E;
    color: #22C55E;
  }

  /* Nodes Section */
  .nodes-section {
    padding: 0 0 80px;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .section-title h2 {
    font-size: 1.5rem;
    margin-bottom: 4px;
  }

  .section-title p {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .search-form {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 14px;
    color: var(--text-tertiary);
    pointer-events: none;
  }

  .search-input {
    width: 280px;
    padding: 10px 40px 10px 44px;
    font-size: 14px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    transition: border-color var(--transition-fast);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .search-input::placeholder {
    color: var(--text-tertiary);
  }

  .search-clear {
    position: absolute;
    right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    transition: color var(--transition-fast);
  }

  .search-clear:hover {
    color: var(--text-primary);
  }

  .empty-state {
    text-align: center;
    padding: 64px 24px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }

  .empty-state h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .empty-state p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 24px;
  }

  /* Table Styles */
  .table-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table th,
  .data-table td {
    padding: 16px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .data-table th {
    font-size: 12px;
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--bg-tertiary);
  }

  .data-table tbody tr:hover {
    background: var(--bg-tertiary);
  }

  .data-table tbody tr:last-child td {
    border-bottom: none;
  }

  .node-name {
    font-weight: 600;
    display: block;
  }

  .node-features {
    display: flex;
    gap: 4px;
    margin-top: 6px;
    flex-wrap: wrap;
  }

  .feature-tag {
    font-size: 10px;
    font-weight: 600;
    padding: 2px 6px;
    background: var(--bg-tertiary);
    color: var(--text-tertiary);
    border-radius: var(--radius-sm);
  }

  .endpoint-code {
    font-size: 13px;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
  }

  .type-badge {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    padding: 4px 10px;
    border-radius: var(--radius-full);
  }

  .type-badge.official {
    background: rgba(20, 137, 213, 0.1);
    color: var(--color-primary);
  }

  .type-badge.community {
    background: rgba(59, 130, 246, 0.1);
    color: #3B82F6;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    font-weight: 600;
    text-transform: capitalize;
  }

  .status-badge .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--text-tertiary);
  }

  .status-badge.active .status-dot {
    background: #22C55E;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.5);
  }

  .status-badge.inactive .status-dot {
    background: #EF4444;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--text-secondary);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }

  .copy-btn:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .primary-header {
      flex-direction: column;
    }

    .primary-details {
      flex-wrap: wrap;
      gap: 24px;
    }
  }

  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
    }

    .search-form {
      width: 100%;
    }

    .search-input {
      width: 100%;
      flex: 1;
    }

    .table-card {
      overflow-x: auto;
    }

    .data-table {
      min-width: 700px;
    }
  }

  @media (max-width: 640px) {
    .primary-details {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>

<script>
  // Copy RPC URL to clipboard
  const copyButtons = document.querySelectorAll('.copy-btn');

  copyButtons.forEach(btn => {
    btn.addEventListener('click', async () => {
      const endpoint = btn.getAttribute('data-endpoint');
      if (!endpoint) return;

      try {
        await navigator.clipboard.writeText(endpoint);

        const originalHTML = btn.innerHTML;
        btn.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        `;
        btn.style.color = '#22C55E';
        btn.style.borderColor = '#22C55E';

        setTimeout(() => {
          btn.innerHTML = originalHTML;
          btn.style.color = '';
          btn.style.borderColor = '';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });

  // Add Network functionality
  const addNetworkBtn = document.getElementById('addNetworkBtnRpc');
  const btnText = addNetworkBtn?.querySelector('.btn-text') as HTMLElement;

  const LAB_CHAIN_ID = '0x1466';

  const LAB_CHAIN_CONFIG = {
    chainId: LAB_CHAIN_ID,
    chainName: 'LAB Chain',
    nativeCurrency: {
      name: 'LAB',
      symbol: 'LAB',
      decimals: 18
    },
    rpcUrls: ['https://rpc.labchain.la'],
    blockExplorerUrls: ['https://explorer.labchain.la']
  };

  function showSuccess() {
    if (addNetworkBtn && btnText) {
      const originalText = btnText.textContent;
      btnText.textContent = 'Network Added!';
      addNetworkBtn.classList.add('added');

      setTimeout(() => {
        btnText.textContent = originalText;
        addNetworkBtn.classList.remove('added');
      }, 3000);
    }
  }

  function showError(message: string) {
    if (btnText) {
      const originalText = btnText.textContent;
      btnText.textContent = message;

      setTimeout(() => {
        btnText.textContent = originalText;
      }, 3000);
    }
  }

  async function addLabChainNetwork() {
    if (typeof (window as any).ethereum === 'undefined') {
      alert('Please install MetaMask or another Web3 wallet to add the network.');
      return;
    }

    try {
      await (window as any).ethereum.request({
        method: 'wallet_addEthereumChain',
        params: [LAB_CHAIN_CONFIG]
      });
      showSuccess();
    } catch (error: any) {
      if (error.code === 4001) {
        console.log('User rejected adding LAB Chain network');
      } else {
        console.error('Failed to add LAB Chain network:', error);
        showError('Failed to add');
      }
    }
  }

  addNetworkBtn?.addEventListener('click', addLabChainNetwork);
</script>
