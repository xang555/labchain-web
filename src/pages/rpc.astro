  .detail-link:hover {
    text-decoration: underline;
  }

  /* Add Network Button */
  .add-network-btn.added {
    background: rgba(34, 197, 94, 0.1);
    border-color: #22C55E;
    color: #22C55E;
  }

  .add-network-btn.added:hover {
    background: rgba(34, 197, 94, 0.15);
  }

  /* Nodes Section */
  .nodes-section {
    padding: 32px 0 80px;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }

  .section-title {
    flex: 1;
  }

  .section-title h2 {
    font-size: 1.5rem;
    margin-bottom: 8px;
  }

  .section-title p {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .search-form {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 14px;
    color: var(--text-tertiary);
    pointer-events: none;
  }

  .search-input {
    width: 280px;
    padding: 10px 40px 10px 44px;
    font-size: 14px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    transition: border-color var(--transition-fast);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-red);
  }

  .search-input::placeholder {
    color: var(--text-tertiary);
  }

  .search-clear {
    position: absolute;
    right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    transition: color var(--transition-fast);
  }

  .search-clear:hover {
    color: var(--text-primary);
  }

  .search-results-info {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 24px;
    padding: 12px 16px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
  }

  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 64px 24px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }

  .empty-state-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--bg-tertiary);
    border-radius: 50%;
    margin-bottom: 24px;
  }

  .empty-state-icon svg {
    color: var(--text-tertiary);
  }

  .empty-state h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .empty-state p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 24px;
  }

