---
import Layout from '../layouts/Layout.astro';
import { getAllRpcEndpoints, searchRpcEndpoints } from '../lib/data';

// Get search query from URL
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('search') || '';

// Get RPC nodes from database
const rpcNodesRaw = searchQuery ? searchRpcEndpoints(searchQuery) : getAllRpcEndpoints();

// Transform to display format
const rpcNodes = rpcNodesRaw.map(node => ({
  id: node.id.toString(),
  name: node.name,
  endpoint: node.endpoint,
  type: node.type,
  location: node.location,
  status: node.status,
  latency: node.latency,
  requests: node.requests,
  rateLimit: node.rate_limit,
  features: node.features ? node.features.split(',').map(f => f.trim()) : []
}));

const officialNodes = rpcNodes.filter(n => n.type === 'official').length;
const communityNodes = rpcNodes.filter(n => n.type === 'community').length;
const activeNodes = rpcNodes.filter(n => n.status === 'active').length;
---

<Layout title="RPC Endpoints - LAB Chain" description="List of public RPC endpoints for LAB Chain network. Connect your dApps and wallets to the network.">
  <section class="page-hero">
    <div class="container">
      <div class="page-header">
        <div class="breadcrumb">
          <a href="/">Home</a>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
          <span>RPC Endpoints</span>
        </div>
        <h1>Public RPC Endpoints</h1>
        <p>
          Connect your dApps, wallets, and tools to LAB Chain using these public RPC endpoints.
          Choose from official and community-operated nodes based on your needs.
        </p>
      </div>
    </div>
  </section>

  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
              <line x1="12" y1="22.08" x2="12" y2="12"></line>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{rpcNodes.length}</span>
            <span class="stat-label">Total Endpoints</span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon official">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{officialNodes}</span>
            <span class="stat-label">Official Nodes</span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon community">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{communityNodes}</span>
            <span class="stat-label">Community Nodes</span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon success">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value">{activeNodes}</span>
            <span class="stat-label">Active Endpoints</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="primary-rpc">
    <div class="container">
      <div class="primary-card">
        <div class="primary-header">
          <div class="primary-info">
            <span class="badge badge-primary">Recommended</span>
            <h2>Primary RPC Endpoint</h2>
            <p>Use this endpoint for general purpose connections to LAB Chain.</p>
          </div>
          <button class="btn btn-primary add-network-btn" id="addNetworkBtnRpc">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
            <span class="btn-text">Add to Wallet</span>
          </button>
        </div>
        <div class="primary-endpoint">
          <code>https://rpc.labchain.la</code>
          <button class="copy-btn" data-endpoint="https://rpc.labchain.la" title="Copy RPC URL">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        </div>
        <div class="primary-details">
          <div class="detail-item">
            <span class="detail-label">Chain ID</span>
            <span class="detail-value">5222</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Currency</span>
            <span class="detail-value">LAB</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Explorer</span>
            <a href="https://explorer.labchain.la" class="detail-link" target="_blank" rel="noopener noreferrer">explorer.labchain.la</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="nodes-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title">
          <h2>All RPC Endpoints</h2>
          <p>Browse all available public RPC endpoints for LAB Chain.</p>
        </div>
        <form class="search-form" method="GET">
          <div class="search-input-wrapper">
            <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" class="search-input" placeholder="Search endpoints..." value={searchQuery} />
            {searchQuery && (
              <a href="/rpc" class="search-clear" title="Clear search">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </a>
            )}
          </div>
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
      </div>

      {searchQuery && (
        <div class="search-results-info">
          Found {rpcNodes.length} result{rpcNodes.length !== 1 ? 's' : ''} for "{searchQuery}"
        </div>
      )}

      {rpcNodes.length === 0 ? (
        <div class="empty-state">
          <div class="empty-state-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </div>
          <h3>No RPC Endpoints Found</h3>
          <p>{searchQuery ? 'Try a different search term.' : 'No RPC endpoints have been added yet.'}</p>
          {searchQuery && (
            <div class="empty-state-actions">
              <a href="/rpc" class="btn btn-secondary">Clear Search</a>
            </div>
          )}
        </div>
      ) : (
      <div class="nodes-grid">
        {rpcNodes.map((node) => (
          <div class="node-card" data-status={node.status} data-type={node.type}>
            <div class="node-header">
              <div class="node-status">
                <span class={`status-dot ${node.status}`}></span>
                <span class="status-text">{node.status === 'active' ? 'Online' : 'Offline'}</span>
              </div>
              <span class={`node-type ${node.type}`}>{node.type === 'official' ? 'Official' : 'Community'}</span>
            </div>

            <h3 class="node-name">{node.name}</h3>

            <div class="node-location">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span>{node.location}</span>
            </div>

            <div class="node-features">
              {node.features.map((feature) => (
                <span class="feature-tag">{feature}</span>
              ))}
            </div>

            <div class="node-stats">
              <div class="node-stat">
                <span class="node-stat-label">Latency</span>
                <span class="node-stat-value">{node.latency}</span>
              </div>
              <div class="node-stat">
                <span class="node-stat-label">Rate Limit</span>
                <span class="node-stat-value">{node.rateLimit}</span>
              </div>
              <div class="node-stat">
                <span class="node-stat-label">Requests</span>
                <span class="node-stat-value">{node.requests}</span>
              </div>
            </div>

            <div class="node-endpoint">
              <label>RPC URL</label>
              <div class="endpoint-wrapper">
                <code>{node.endpoint}</code>
                <button class="copy-btn" data-endpoint={node.endpoint} title="Copy RPC URL">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
      )}
    </div>
  </section>

  <section class="help-section">
    <div class="container">
      <div class="help-card">
        <div class="help-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
        </div>
        <div class="help-content">
          <h3>Run Your Own RPC Node</h3>
          <p>
            Want to contribute to the network or need a dedicated endpoint? Set up your own RPC node
            and optionally share it with the community. Check our documentation for setup instructions.
          </p>
          <a href="/docs#el-node" class="btn btn-secondary">
            View Setup Guide
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
