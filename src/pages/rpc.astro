    border-radius: var(--radius-lg);
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--bg-tertiary);
    color: var(--color-red);
    border-radius: var(--radius-md);
  }

  .stat-icon.official {
    background: rgba(206, 17, 38, 0.1);
    color: var(--color-red);
  }

  .stat-icon.community {
    background: rgba(59, 130, 246, 0.1);
    color: #3B82F6;
  }

  .stat-icon.success {
    background: rgba(34, 197, 94, 0.1);
