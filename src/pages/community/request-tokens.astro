---
import Layout from '../../layouts/Layout.astro';
import LabToken from '../../components/LabToken.astro';
import { createTokenRequest, getTokenRequestByTrackingId } from '../../lib/data';

let success = false;
let error = '';
let trackingId = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const firstName = formData.get('first_name')?.toString().trim() || '';
    const lastName = formData.get('last_name')?.toString().trim() || '';
    const email = formData.get('email')?.toString().trim() || '';
    const walletAddress = formData.get('wallet_address')?.toString().trim() || '';
    const requestedAmount = formData.get('requested_amount')?.toString().trim() || '';
    const reason = formData.get('reason')?.toString().trim() || '';
    const contactInfo = formData.get('contact_info')?.toString().trim() || '';

    // Validation
    if (!firstName || !lastName || !email || !walletAddress || !requestedAmount || !reason) {
      error = 'Please fill in all required fields.';
    } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
      error = 'Please enter a valid email address.';
    } else if (!/^0x[a-fA-F0-9]{40}$/.test(walletAddress)) {
      error = 'Please enter a valid Ethereum wallet address (0x followed by 40 hexadecimal characters).';
    } else {
      const request = createTokenRequest({
        first_name: firstName,
        last_name: lastName,
        email,
        wallet_address: walletAddress,
        requested_amount: requestedAmount,
        reason,
        contact_info: contactInfo
      });
      trackingId = request.tracking_id;
      success = true;
    }
  } catch (e) {
    error = 'An error occurred. Please try again.';
  }
}
---

<Layout title="Request LAB Tokens - LAB Chain" description="Request LAB tokens for development, testing, or running validators on the LAB Chain network.">
  <section class="page-hero">
    <div class="container">
      <div class="page-header">
        <div class="breadcrumb">
          <a href="/">Home</a>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
          <a href="/community">Community</a>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
          <span>Request Tokens</span>
        </div>
        <h1>Request LAB Tokens</h1>
        <p>
          Need LAB tokens for development, testing, or running a validator?
          Submit your request and our team will review it.
        </p>
      </div>
    </div>
  </section>

  <section class="form-section">
    <div class="container">
      {success ? (
        <div class="success-card">
          <div class="success-icon">
            <LabToken size={96} />
          </div>
          <h2>Request Submitted!</h2>
          <p>Your token request has been submitted successfully. Our team will review your request and notify you via email once it has been processed.</p>
          <div class="tracking-info">
            <span class="tracking-label">Tracking ID:</span>
            <code class="tracking-code">{trackingId}</code>
          </div>
          <p class="tracking-note">Please check your email for updates on your request status.</p>
          <div class="success-actions">
            <a href="/community" class="btn btn-primary">Back to Community</a>
          </div>
        </div>
      ) : (
        <div class="form-card">
          <div class="form-header">
            <div class="form-icon">
              <LabToken size={56} />
            </div>
            <div>
              <h2>Token Request Form</h2>
              <p>Fill out the form below to request LAB tokens. All fields marked with * are required.</p>
            </div>
          </div>

          {error && (
            <div class="error-message">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
              </svg>
              {error}
            </div>
          )}

          <form method="POST" class="token-form">
            <div class="form-row">
              <div class="form-group">
                <label for="first_name">First Name *</label>
                <input type="text" id="first_name" name="first_name" required placeholder="Enter your first name" />
              </div>
              <div class="form-group">
                <label for="last_name">Last Name *</label>
                <input type="text" id="last_name" name="last_name" required placeholder="Enter your last name" />
              </div>
            </div>

            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required placeholder="your@email.com" />
              <span class="form-hint">We'll notify you about your request status via email.</span>
            </div>

            <div class="form-group">
              <label for="wallet_address">Wallet Address *</label>
              <input type="text" id="wallet_address" name="wallet_address" required placeholder="0x..." pattern="^0x[a-fA-F0-9]{40}$" />
              <span class="form-hint">Your Ethereum-compatible wallet address to receive LAB tokens.</span>
            </div>

            <div class="form-group">
              <label for="requested_amount">Requested Amount (LAB) *</label>
              <input type="text" id="requested_amount" name="requested_amount" required placeholder="e.g., 100 LAB" />
              <span class="form-hint">Note: The actual amount transferred is at the discretion of the LAB Chain team.</span>
            </div>

            <div class="form-group">
              <label for="reason">Reason for Request *</label>
              <textarea id="reason" name="reason" required rows="4" placeholder="Describe why you need LAB tokens (e.g., development, testing, running a validator, etc.)"></textarea>
            </div>

            <div class="form-group">
              <label for="contact_info">Additional Contact Information</label>
              <input type="text" id="contact_info" name="contact_info" placeholder="Telegram, Discord, or other contact (optional)" />
              <span class="form-hint">Optional: Provide alternative contact information for faster communication.</span>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn btn-primary btn-lg">
                <LabToken size={20} />
                Submit Request
              </button>
            </div>
          </form>
        </div>
      )}

      <div class="info-card">
        <h3>Important Information</h3>
        <ul>
          <li>Token requests are reviewed manually by our team.</li>
          <li>The actual amount transferred may differ from your requested amount based on availability and purpose.</li>
          <li>Requests for validators typically receive higher priority.</li>
          <li>Please allow up to 3-5 business days for processing.</li>
          <li>You will receive an email notification once your request has been processed.</li>
        </ul>
      </div>
    </div>
  </section>
</Layout>

