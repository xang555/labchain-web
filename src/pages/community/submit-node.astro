    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: var(--radius-md);
    color: #3B82F6;
    font-size: 13px;
    margin-bottom: 20px;
  }

  .beacon-fields {
    animation: fadeIn 0.2s ease-in-out;
  }

