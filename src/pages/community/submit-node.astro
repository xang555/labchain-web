    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }

  .info-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(206, 17, 38, 0.1);
    color: var(--color-red);
    border-radius: var(--radius-md);
