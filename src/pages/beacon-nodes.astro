---
import Layout from '../layouts/Layout.astro';
import { getAllBeaconNodes, searchBeaconNodes } from '../lib/data';

// Get search query from URL
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('search') || '';

// Get beacon nodes from database
const beaconNodesRaw = searchQuery ? searchBeaconNodes(searchQuery) : getAllBeaconNodes();

// Transform to display format - only name, enr, and p2p
const beaconNodes = beaconNodesRaw.map(node => ({
  id: node.id.toString(),
  name: node.name,
  enr: node.enr || '',
  p2p: node.p2p || ''
}));
---

<Layout title="Beacon Nodes - LAB Chain" description="List of Consensus Layer beacon nodes for LAB Chain network. Connect your validator to participate in consensus.">
  <section class="page-hero">
    <div class="container">
      <div class="page-header">
        <div class="breadcrumb">
          <a href="/">Home</a>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
          <span>Beacon Nodes</span>
        </div>
        <h1>Consensus Layer Beacon Nodes</h1>
        <p>
          Connect to these beacon nodes to participate in the LAB Chain consensus layer.
          Beacon nodes coordinate validators and manage the Proof-of-Stake consensus.
        </p>
      </div>
    </div>
  </section>

  <section class="nodes-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title">
          <h2>Available Beacon Nodes</h2>
          <p>Total: {beaconNodes.length}</p>
        </div>
        <form class="search-form" method="GET">
          <div class="search-input-wrapper">
            <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" class="search-input" placeholder="Search nodes..." value={searchQuery} />
            {searchQuery && (
              <a href="/beacon-nodes" class="search-clear" title="Clear search">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </a>
            )}
          </div>
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
      </div>

      {beaconNodes.length === 0 ? (
        <div class="empty-state">
          <h3>No Beacon Nodes Found</h3>
          <p>{searchQuery ? 'Try a different search term.' : 'No beacon nodes have been added yet.'}</p>
          {searchQuery && (
            <a href="/beacon-nodes" class="btn btn-secondary">Clear Search</a>
          )}
        </div>
      ) : (
        <div class="table-card">
          <table class="data-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>ENR</th>
                <th>P2P (libp2p)</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {beaconNodes.map((node) => (
                <tr>
                  <td>
                    <span class="node-name">{node.name}</span>
                  </td>
                  <td>
                    {node.enr ? (
                      <code class="endpoint-code" title={node.enr}>{node.enr.length > 40 ? node.enr.substring(0, 40) + '...' : node.enr}</code>
                    ) : (
                      <span class="no-value">-</span>
                    )}
                  </td>
                  <td>
                    {node.p2p ? (
                      <code class="endpoint-code" title={node.p2p}>{node.p2p.length > 40 ? node.p2p.substring(0, 40) + '...' : node.p2p}</code>
                    ) : (
                      <span class="no-value">-</span>
                    )}
                  </td>
                  <td>
                    <div class="action-buttons">
                      {node.enr && (
                        <button class="copy-btn" data-value={node.enr} title="Copy ENR">
                          <span class="btn-label">ENR</span>
                          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                          </svg>
                        </button>
                      )}
                      {node.p2p && (
                        <button class="copy-btn" data-value={node.p2p} title="Copy P2P">
                          <span class="btn-label">P2P</span>
                          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                          </svg>
                        </button>
                      )}
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>
  </section>

  <section class="help-section">
    <div class="container">
      <div class="help-card">
        <div class="help-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
        </div>
        <div class="help-content">
          <h3>Become a Validator</h3>
          <p>
            Want to help secure the LAB Chain network? Run a validator node and earn rewards for
            participating in consensus. Check our documentation for staking requirements and setup guides.
          </p>
          <a href="/docs#validator-node" class="btn btn-secondary">
            View Staking Guide
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    padding: 48px 0 32px;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .page-header {
    max-width: 700px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-tertiary);
    margin-bottom: 16px;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .breadcrumb a:hover {
    color: var(--color-red);
  }

  .page-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 16px;
  }

  .page-header p {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  /* Nodes Section */
  .nodes-section {
    padding: 32px 0 80px;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .section-title h2 {
    font-size: 1.5rem;
    margin-bottom: 4px;
  }

  .section-title p {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .search-form {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 14px;
    color: var(--text-tertiary);
    pointer-events: none;
  }

  .search-input {
    width: 280px;
    padding: 10px 40px 10px 44px;
    font-size: 14px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    transition: border-color var(--transition-fast);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-red);
  }

  .search-input::placeholder {
    color: var(--text-tertiary);
  }

  .search-clear {
    position: absolute;
    right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    transition: color var(--transition-fast);
  }

  .search-clear:hover {
    color: var(--text-primary);
  }

  .empty-state {
    text-align: center;
    padding: 64px 24px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }

  .empty-state h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .empty-state p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 24px;
  }

  /* Table Styles */
  .table-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table th,
  .data-table td {
    padding: 16px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .data-table th {
    font-size: 12px;
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--bg-tertiary);
  }

  .data-table tbody tr:hover {
    background: var(--bg-tertiary);
  }

  .data-table tbody tr:last-child td {
    border-bottom: none;
  }

  .node-name {
    font-weight: 600;
    display: block;
  }

  .endpoint-code {
    font-size: 12px;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    display: inline-block;
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .no-value {
    color: var(--text-tertiary);
  }

  .action-buttons {
    display: flex;
    gap: 8px;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    color: var(--text-secondary);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    font-size: 12px;
    font-weight: 500;
  }

  .copy-btn:hover {
    color: var(--color-red);
    border-color: var(--color-red);
  }

  .btn-label {
    font-weight: 600;
  }

  /* Help Section */
  .help-section {
    padding: 0 0 80px;
  }

  .help-card {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    padding: 32px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
  }

  .help-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgba(206, 17, 38, 0.1);
    color: var(--color-red);
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .help-content {
    flex: 1;
  }

  .help-content h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .help-content p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
    line-height: 1.7;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
    }

    .search-form {
      width: 100%;
    }

    .search-input {
      width: 100%;
      flex: 1;
    }

    .table-card {
      overflow-x: auto;
    }

    .data-table {
      min-width: 600px;
    }

    .help-card {
      flex-direction: column;
      text-align: center;
    }

    .help-icon {
      align-self: center;
    }
  }
</style>

<script>
  // Copy value to clipboard
  const copyButtons = document.querySelectorAll('.copy-btn');

  copyButtons.forEach(btn => {
    btn.addEventListener('click', async () => {
      const value = btn.getAttribute('data-value');
      if (!value) return;

      try {
        await navigator.clipboard.writeText(value);

        const label = btn.querySelector('.btn-label');
        const originalText = label?.textContent || '';
        if (label) {
          label.textContent = 'Copied!';
        }
        btn.style.color = '#22C55E';
        btn.style.borderColor = '#22C55E';

        setTimeout(() => {
          if (label) {
            label.textContent = originalText;
          }
          btn.style.color = '';
          btn.style.borderColor = '';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
