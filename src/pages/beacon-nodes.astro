              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    padding: 48px 0 32px;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .page-header {
    max-width: 700px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-tertiary);
    margin-bottom: 16px;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .breadcrumb a:hover {
    color: var(--color-red);
  }

  .page-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 16px;
  }

  .page-header p {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  /* Stats Section */
  .stats-section {
    padding: 32px 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 24px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--bg-tertiary);
    color: var(--color-red);
    border-radius: var(--radius-md);
  }

  .stat-icon.success {
    background: rgba(34, 197, 94, 0.1);
    color: #22C55E;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-card .stat-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
  }

  .stat-card .stat-label {
    font-size: 13px;
    color: var(--text-tertiary);
  }

  /* Nodes Section */
  .nodes-section {
    padding: 32px 0 80px;
  }

  .section-title {
    margin-bottom: 32px;
  }

  .section-title h2 {
    font-size: 1.5rem;
    margin-bottom: 8px;
  }

  .section-title p {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .nodes-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .node-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: 24px;
    transition: all var(--transition-normal);
  }

  .node-card:hover {
    border-color: var(--border-color-strong);
    box-shadow: var(--shadow-lg);
  }

  .node-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .node-status {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .status-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--text-tertiary);
  }

  .status-dot.active {
    background: #22C55E;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
  }

  .status-dot.syncing {
    background: #EAB308;
    animation: pulse 1.5s ease-in-out infinite;
  }

  .status-text {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .node-version {
    font-size: 12px;
    font-family: monospace;
    color: var(--text-tertiary);
    background: var(--bg-tertiary);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
  }

  .node-name {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .node-location {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 20px;
  }

  .node-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    padding: 16px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    margin-bottom: 20px;
  }

  .node-stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .node-stat-label {
    font-size: 11px;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .node-stat-value {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .node-endpoint {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 16px;
  }

  .node-endpoint label {
    font-size: 12px;
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .endpoint-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
  }

  .endpoint-wrapper code {
    flex: 1;
    font-size: 13px;
    color: var(--text-secondary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--text-secondary);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .copy-btn:hover {
    color: var(--color-red);
    border-color: var(--color-red);
  }

  .node-actions {
    display: flex;
    gap: 12px;
  }

  .btn-sm {
    padding: 8px 16px;
    font-size: 13px;
  }

  /* Help Section */
  .help-section {
    padding: 0 0 80px;
  }

  .help-card {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    padding: 32px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
  }

  .help-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgba(206, 17, 38, 0.1);
    color: var(--color-red);
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .help-content {
    flex: 1;
  }

  .help-content h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .help-content p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
    line-height: 1.7;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .nodes-grid {
      grid-template-columns: 1fr;
    }

    .help-card {
      flex-direction: column;
      text-align: center;
    }

    .help-icon {
      align-self: center;
    }
  }

  @media (max-width: 640px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .node-stats {
      grid-template-columns: 1fr;
      gap: 12px;
    }
  }
</style>

<script>
  // Copy endpoint URL to clipboard
  const copyButtons = document.querySelectorAll('.copy-btn');

  copyButtons.forEach(btn => {
    btn.addEventListener('click', async () => {
      const endpoint = btn.getAttribute('data-endpoint');
      if (!endpoint) return;

      try {
        await navigator.clipboard.writeText(endpoint);

        // Visual feedback
        const originalHTML = btn.innerHTML;
        btn.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        `;
        btn.style.color = '#22C55E';
        btn.style.borderColor = '#22C55E';

        setTimeout(() => {
          btn.innerHTML = originalHTML;
          btn.style.color = '';
          btn.style.borderColor = '';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
