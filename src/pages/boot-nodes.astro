  }

  .node-name {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .node-location {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 20px;
  }

  .node-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    padding: 16px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    margin-bottom: 20px;
  }

  .node-stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .node-stat-label {
    font-size: 11px;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .node-stat-value {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .node-enode {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .node-enode label {
    font-size: 12px;
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .enode-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
  }

  .enode-wrapper code {
    flex: 1;
    font-size: 12px;
    color: var(--text-secondary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--text-secondary);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .copy-btn:hover {
    color: var(--color-red);
    border-color: var(--color-red);
  }

  /* Help Section */
  .help-section {
    padding: 0 0 80px;
  }

  .help-card {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    padding: 32px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
  }

  .help-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgba(206, 17, 38, 0.1);
    color: var(--color-red);
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .help-content {
    flex: 1;
  }

  .help-content h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .help-content p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
    line-height: 1.7;
  }

