---
import AdminLayout from '../../layouts/AdminLayout.astro';
import LabToken from '../../components/LabToken.astro';
import { getAllTokenRequests, getTokenRequestById, updateTokenRequestStatus, deleteTokenRequest, getTokenRequestStats } from '../../lib/data';
import { validateSessionCookie } from '../../lib/auth';
import { sendTokenApprovalEmail, sendTokenRejectionEmail, isEmailConfigured } from '../../lib/email';

// Check authentication
const user = validateSessionCookie(Astro.request.headers.get('cookie') ?? undefined);
if (!user) {
  return Astro.redirect('/admin/login');
}

let message = '';
let messageType = '';

// Handle form submissions
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action')?.toString();
  const id = parseInt(formData.get('id')?.toString() || '0');

  if (action === 'approve') {
    const transferredAmount = formData.get('transferred_amount')?.toString() || '';
    const adminNotes = formData.get('admin_notes')?.toString() || '';
    if (!transferredAmount) {
      message = 'Please enter the transferred amount';
      messageType = 'error';
    } else {
      const request = getTokenRequestById(id);
      updateTokenRequestStatus(id, 'approved', adminNotes, transferredAmount);
      message = 'Request approved and tokens transferred';
      messageType = 'success';

      // Send approval email
      if (request && isEmailConfigured()) {
        const emailResult = await sendTokenApprovalEmail(request, transferredAmount);
        if (emailResult.success) {
          message += ' - Email notification sent';
        } else {
          message += ` - Email failed: ${emailResult.error}`;
        }
      }
    }
  } else if (action === 'reject') {
    const adminNotes = formData.get('admin_notes')?.toString() || '';
    const request = getTokenRequestById(id);
    updateTokenRequestStatus(id, 'rejected', adminNotes);
    message = 'Request rejected';
    messageType = 'success';

    // Send rejection email
    if (request && isEmailConfigured()) {
      const emailResult = await sendTokenRejectionEmail(request, adminNotes);
      if (emailResult.success) {
        message += ' - Email notification sent';
      } else {
        message += ` - Email failed: ${emailResult.error}`;
      }
    }
  } else if (action === 'delete') {
    deleteTokenRequest(id);
    message = 'Request deleted successfully';
    messageType = 'success';
  } else if (action === 'pending') {
    updateTokenRequestStatus(id, 'pending');
    message = 'Request moved back to pending';
    messageType = 'success';
  }
}

const requests = getAllTokenRequests();
const stats = getTokenRequestStats();
const urlParams = new URL(Astro.request.url).searchParams;
const filterStatus = urlParams.get('status') || 'all';
const viewId = urlParams.get('view') ? parseInt(urlParams.get('view')!) : null;
const viewItem = viewId ? getTokenRequestById(viewId) : null;
const actionType = urlParams.get('action') || '';

const filteredRequests = filterStatus === 'all'
  ? requests
  : requests.filter(r => r.status === filterStatus);
---

<AdminLayout title="Token Requests" currentPage="token-requests" user={user}>
  <div class="page-header">
    <div class="header-content">
      <div class="title-with-icon">
        <LabToken size={40} />
        <div>
          <h1 class="page-title">Token Requests</h1>
          <p class="page-subtitle">Manage LAB token requests from community members</p>
        </div>
      </div>
    </div>
  </div>

  {message && (
    <div class={`alert alert-${messageType}`}>{message}</div>
  )}

  <!-- Desktop: Stats Row -->
  <div class="stats-row desktop-filter">
    <a href="/admin/token-requests" class={`stat-chip ${filterStatus === 'all' ? 'active' : ''}`}>
      <span class="stat-count">{stats.total}</span>
      <span class="stat-label">All</span>
    </a>
    <a href="/admin/token-requests?status=pending" class={`stat-chip pending ${filterStatus === 'pending' ? 'active' : ''}`}>
      <span class="stat-count">{stats.pending}</span>
      <span class="stat-label">Pending</span>
    </a>
    <a href="/admin/token-requests?status=approved" class={`stat-chip approved ${filterStatus === 'approved' ? 'active' : ''}`}>
      <span class="stat-count">{stats.approved}</span>
      <span class="stat-label">Approved</span>
    </a>
    <a href="/admin/token-requests?status=rejected" class={`stat-chip rejected ${filterStatus === 'rejected' ? 'active' : ''}`}>
      <span class="stat-count">{stats.rejected}</span>
      <span class="stat-label">Rejected</span>
    </a>
  </div>

  <!-- Mobile: Custom Dropdown Filter -->
  <div class="mobile-filter">
    <div class="custom-dropdown" id="statusDropdown">
      <button type="button" class="dropdown-trigger" id="dropdownTrigger">
        <div class="dropdown-icon">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
          </svg>
        </div>
        <div class="dropdown-content">
          <span class="dropdown-label">Filter by status</span>
          <span class="dropdown-value" id="dropdownValue">
            {filterStatus === 'all' && `All Requests (${stats.total})`}
            {filterStatus === 'pending' && `Pending (${stats.pending})`}
            {filterStatus === 'approved' && `Approved (${stats.approved})`}
            {filterStatus === 'rejected' && `Rejected (${stats.rejected})`}
          </span>
        </div>
        <div class="dropdown-chevron">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </div>
      </button>
      <div class="dropdown-menu" id="dropdownMenu">
        <a href="/admin/token-requests" class={`dropdown-item ${filterStatus === 'all' ? 'active' : ''}`}>
          <span class="item-dot"></span>
          <span class="item-text">All Requests</span>
          <span class="item-count">{stats.total}</span>
        </a>
        <a href="/admin/token-requests?status=pending" class={`dropdown-item pending ${filterStatus === 'pending' ? 'active' : ''}`}>
          <span class="item-dot"></span>
          <span class="item-text">Pending</span>
          <span class="item-count">{stats.pending}</span>
        </a>
        <a href="/admin/token-requests?status=approved" class={`dropdown-item approved ${filterStatus === 'approved' ? 'active' : ''}`}>
          <span class="item-dot"></span>
          <span class="item-text">Approved</span>
          <span class="item-count">{stats.approved}</span>
        </a>
        <a href="/admin/token-requests?status=rejected" class={`dropdown-item rejected ${filterStatus === 'rejected' ? 'active' : ''}`}>
          <span class="item-dot"></span>
          <span class="item-text">Rejected</span>
          <span class="item-count">{stats.rejected}</span>
        </a>
      </div>
    </div>
  </div>

  {filteredRequests.length === 0 ? (
    <div class="card">
      <div class="empty-state">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="16"></line>
          <line x1="8" y1="12" x2="16" y2="12"></line>
        </svg>
        <h3>No Requests</h3>
        <p>{filterStatus === 'all' ? 'No token requests have been submitted yet.' : `No ${filterStatus} requests.`}</p>
      </div>
    </div>
  ) : (
    <>
      <!-- Desktop Table View -->
      <div class="card desktop-view">
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Tracking ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Wallet</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {filteredRequests.map((req) => (
                <tr>
                  <td>
                    <code class="tracking-code">{req.tracking_id}</code>
                  </td>
                  <td>
                    <strong>{req.first_name} {req.last_name}</strong>
                  </td>
                  <td>
                    <a href={`mailto:${req.email}`} class="contact-email">{req.email}</a>
                  </td>
                  <td>
                    <code class="wallet-address" title={req.wallet_address}>
                      {req.wallet_address.substring(0, 6)}...{req.wallet_address.substring(38)}
                    </code>
                  </td>
                  <td>
                    <span class="amount-text">{req.requested_amount}</span>
                    {req.transferred_amount && (
                      <div class="transferred-amount">Sent: {req.transferred_amount}</div>
                    )}
                  </td>
                  <td>
                    <span class={`status-badge ${req.status}`}>{req.status}</span>
                  </td>
                  <td>
                    <span class="date-text">{new Date(req.created_at).toLocaleDateString()}</span>
                  </td>
                  <td>
                    <div class="actions-cell">
                      <a href={`/admin/token-requests?view=${req.id}`} class="action-icon" title="View Details">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                          <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                      </a>
                      {req.status === 'pending' && (
                        <>
                          <a href={`/admin/token-requests?view=${req.id}&action=approve`} class="action-icon approve" title="Approve">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                          </a>
                          <a href={`/admin/token-requests?view=${req.id}&action=reject`} class="action-icon reject" title="Reject">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <line x1="18" y1="6" x2="6" y2="18"></line>
                              <line x1="6" y1="6" x2="18" y2="18"></line>
                            </svg>
                          </a>
                        </>
                      )}
                      <form method="POST" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this request?')">
                        <input type="hidden" name="action" value="delete" />
                        <input type="hidden" name="id" value={req.id} />
                        <button type="submit" class="action-icon delete" title="Delete">
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                          </svg>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Mobile Card View -->
      <div class="mobile-cards">
        {filteredRequests.map((req) => (
          <div class="request-card">
            <div class="card-header">
              <div class="card-header-left">
                <code class="tracking-code">{req.tracking_id}</code>
                <span class={`status-badge ${req.status}`}>{req.status}</span>
              </div>
              <span class="card-date">{new Date(req.created_at).toLocaleDateString()}</span>
            </div>

            <div class="card-body">
              <div class="card-name">{req.first_name} {req.last_name}</div>
              <a href={`mailto:${req.email}`} class="card-email">{req.email}</a>

              <div class="card-details">
                <div class="card-detail">
                  <span class="card-detail-label">Wallet</span>
                  <code class="card-detail-value wallet">{req.wallet_address.substring(0, 10)}...{req.wallet_address.substring(36)}</code>
                </div>
                <div class="card-detail">
                  <span class="card-detail-label">Requested</span>
                  <span class="card-detail-value amount">{req.requested_amount}</span>
                </div>
                {req.transferred_amount && (
                  <div class="card-detail">
                    <span class="card-detail-label">Sent</span>
                    <span class="card-detail-value sent">{req.transferred_amount}</span>
                  </div>
                )}
              </div>
            </div>

            <div class="card-actions">
              <a href={`/admin/token-requests?view=${req.id}`} class="card-action-btn view">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
                View
              </a>
              {req.status === 'pending' && (
                <>
                  <a href={`/admin/token-requests?view=${req.id}&action=approve`} class="card-action-btn approve">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    Approve
                  </a>
                  <a href={`/admin/token-requests?view=${req.id}&action=reject`} class="card-action-btn reject">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="18" y1="6" x2="6" y2="18"></line>
                      <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    Reject
                  </a>
                </>
              )}
              <form method="POST" class="card-delete-form" onsubmit="return confirm('Are you sure you want to delete this request?')">
                <input type="hidden" name="action" value="delete" />
                <input type="hidden" name="id" value={req.id} />
                <button type="submit" class="card-action-btn delete">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  </svg>
                  Delete
                </button>
              </form>
            </div>
          </div>
        ))}
      </div>
    </>
  )}

  <!-- View/Action Modal -->
  <div class={`modal-overlay ${viewItem ? 'open' : ''}`} id="modal">
    <div class="modal modal-lg">
      <div class="modal-header">
        <h2 class="modal-title">Token Request Details</h2>
        <a href={`/admin/token-requests${filterStatus !== 'all' ? `?status=${filterStatus}` : ''}`} class="modal-close">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </a>
      </div>
      {viewItem && (
        <div class="modal-body">
          <div class="detail-header">
            <div class="detail-title">
              <h3>{viewItem.first_name} {viewItem.last_name}</h3>
              <span class={`status-badge ${viewItem.status}`}>{viewItem.status}</span>
            </div>
            <div class="detail-meta">
              <span class="tracking-code">{viewItem.tracking_id}</span>
            </div>
          </div>

          <div class="detail-grid">
            <div class="detail-item">
              <span class="detail-label">Email</span>
              <a href={`mailto:${viewItem.email}`} class="detail-value link">{viewItem.email}</a>
            </div>
            <div class="detail-item">
              <span class="detail-label">Contact Info</span>
              <span class="detail-value">{viewItem.contact_info || '-'}</span>
            </div>
            <div class="detail-item full-width">
              <span class="detail-label">Wallet Address</span>
              <code class="detail-code">{viewItem.wallet_address}</code>
            </div>
            <div class="detail-item">
              <span class="detail-label">Requested Amount</span>
              <span class="detail-value amount">{viewItem.requested_amount}</span>
            </div>
            {viewItem.transferred_amount && (
              <div class="detail-item highlight">
                <span class="detail-label">Transferred Amount</span>
                <span class="detail-value success">{viewItem.transferred_amount} LAB</span>
              </div>
            )}
            <div class="detail-item">
              <span class="detail-label">Submitted</span>
              <span class="detail-value">{new Date(viewItem.created_at).toLocaleString()}</span>
            </div>
            <div class="detail-item full-width">
              <span class="detail-label">Reason</span>
              <div class="detail-reason">{viewItem.reason}</div>
            </div>
            {viewItem.admin_notes && (
              <div class="detail-item full-width">
                <span class="detail-label">Admin Notes</span>
                <span class="detail-value">{viewItem.admin_notes}</span>
              </div>
            )}
          </div>

          {actionType === 'reject' && viewItem.status === 'pending' && (
            <form method="POST" class="action-form">
              <input type="hidden" name="action" value="reject" />
              <input type="hidden" name="id" value={viewItem.id} />
              <div class="form-header reject">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="15" y1="9" x2="9" y2="15"></line>
                  <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
                <span>Reject Request</span>
              </div>
              <div class="form-group">
                <label class="form-label">Rejection Reason</label>
                <textarea name="admin_notes" class="form-textarea" rows="3" placeholder="Provide a reason for rejection (optional)"></textarea>
              </div>
              <div class="form-actions">
                <a href={`/admin/token-requests?view=${viewItem.id}`} class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Reject Request</button>
              </div>
            </form>
          )}

          {actionType === 'approve' && viewItem.status === 'pending' && (
            <form method="POST" class="action-form">
              <input type="hidden" name="action" value="approve" />
              <input type="hidden" name="id" value={viewItem.id} />
              <div class="form-header approve">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>Approve & Transfer</span>
              </div>
              <div class="form-group">
                <label class="form-label">Transferred Amount (LAB) *</label>
                <input type="text" name="transferred_amount" class="form-input" required placeholder="e.g., 100" />
                <span class="form-hint">Enter the actual amount of LAB tokens to transfer to the wallet.</span>
              </div>
              <div class="form-group">
                <label class="form-label">Notes</label>
                <textarea name="admin_notes" class="form-textarea" rows="2" placeholder="Transaction hash or additional notes (optional)"></textarea>
              </div>
              <div class="form-actions">
                <a href={`/admin/token-requests?view=${viewItem.id}`} class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">Approve & Transfer</button>
              </div>
            </form>
          )}
        </div>
      )}
      {viewItem && !actionType && (
        <div class="modal-footer">
          {viewItem.status === 'pending' && (
            <>
              <a href={`/admin/token-requests?view=${viewItem.id}&action=approve`} class="btn btn-success">Approve</a>
              <a href={`/admin/token-requests?view=${viewItem.id}&action=reject`} class="btn btn-danger">Reject</a>
            </>
          )}
          {(viewItem.status === 'rejected' || viewItem.status === 'approved') && (
            <form method="POST" class="inline-form">
              <input type="hidden" name="action" value="pending" />
              <input type="hidden" name="id" value={viewItem.id} />
              <button type="submit" class="btn btn-secondary">Move to Pending</button>
            </form>
          )}
          <a href={`/admin/token-requests${filterStatus !== 'all' ? `?status=${filterStatus}` : ''}`} class="btn btn-secondary">Close</a>
        </div>
      )}
    </div>
  </div>
</AdminLayout>

<style>
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .title-with-icon {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .stats-row {
    display: flex;
    gap: 12px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .mobile-filter {
    display: none;
    margin-bottom: 20px;
  }

  .custom-dropdown {
    position: relative;
  }

  .dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    padding: 12px 16px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .dropdown-trigger:hover {
    border-color: var(--border-color-strong);
  }

  .dropdown-trigger.open {
    border-color: var(--color-red);
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  .dropdown-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    flex-shrink: 0;
  }

  .dropdown-content {
    flex: 1;
    min-width: 0;
    text-align: left;
  }

  .dropdown-label {
    display: block;
    font-size: 11px;
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 4px;
  }

  .dropdown-value {
    display: block;
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .dropdown-chevron {
    color: var(--text-tertiary);
    flex-shrink: 0;
    transition: transform var(--transition-fast);
  }

  .dropdown-trigger.open .dropdown-chevron {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--bg-card);
    border: 1px solid var(--color-red);
    border-top: none;
    border-bottom-left-radius: var(--radius-lg);
    border-bottom-right-radius: var(--radius-lg);
    padding: 8px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--transition-fast);
    z-index: 100;
  }

  .dropdown-menu.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .dropdown-item:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .dropdown-item.active {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .item-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--text-tertiary);
